---
import BaseLayout from '../layouts/BaseLayout.astro';
import MealPlanPage from '../components/MealPlanPage.jsx';

// Get all recipes for the recipe picker
const recipeFiles = import.meta.glob('../content/recipes/*.json', { eager: true });
const recipes = Object.values(recipeFiles).map(mod => mod.default || mod);

const description = "Plan your weekly meals with ease. Add recipes to each day, generate shopping lists automatically, and sync with your pantry.";
---

<BaseLayout title="Meal Plan - Simpler Recipes" description={description}>
  <main id="main-content" class="min-h-screen bg-background">
    <div class="max-w-[1080px] mx-auto px-4 py-8 md:py-12">
      <MealPlanPage client:load recipes={recipes} />
    </div>
  </main>
</BaseLayout>
